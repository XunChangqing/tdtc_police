= form_for @user_log do |f|
  - if @user_log.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_log.errors.count, "error")} prohibited this user_log from being saved:"
      %ul
        - @user_log.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :operation
    = f.text_field :operation
  .field
    = f.label :target_user
    = f.text_field :target_user
  .field
    = f.label :remark
    = f.text_area :remark
  .actions
    = f.submit 'Save'

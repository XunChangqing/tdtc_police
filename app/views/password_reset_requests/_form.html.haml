= form_for @password_reset_request do |f|
  - if @password_reset_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@password_reset_request.errors.count, "error")} prohibited this password_reset_request from being saved:"
      %ul
        - @password_reset_request.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user_id
  .field
    = f.label :remark
    = f.text_area :remark
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
